<project name="ssFix" basedir=".">
  
  <path id="mylib.jars.path">
    <fileset dir="lib">
      <include name="fauloc/com.gzoltar-0.1.1-jar-with-dependencies.jar"/>
      <include name="*.jar"/>
    </fileset>
  </path>

  <property name="build.dir" value="${basedir}/build"/>
  <property name="src.dir" value="${basedir}/src"/>

  <target name="clean">
    <delete dir="${build.dir}"/>
  </target>

  <target name="compile">
    <mkdir dir="${build.dir}"/>
    <javac destdir="${build.dir}" includeAntRuntime="no" debug="true">
      <classpath><path refid="mylib.jars.path"/></classpath>
      <src path="${src.dir}"/>
      <include name="**/*.java"/>
      <exclude name="**/test/**/*.java"/>
    </javac>
  </target>

  <target name="compile-tests" depends="compile">
    <mkdir dir="${build.dir}"/>
    <javac destdir="${build.dir}" includeAntRuntime="no" debug="true">
      <classpath><path refid="mylib.jars.path"/></classpath>
      <src path="${src.dir}"/>
      <include name="**/test/**/*.java"/>
    </javac>
  </target>

</project>
